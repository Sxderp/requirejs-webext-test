{
  "manifest_version": 2,
  "name": "RequreJS Testing",
  "version": "1.0",
  "description": "Tester",
  "icons": {"32": "img/32.png"},

  "browser_action": {
    "browser_style": false,
    "default_icon": "img/32.png",
    "default_title": "NCG Script"
  },

  "applications": {
    "gecko": {
      "id": "tester@ncgamers.org",
      "strict_min_version": "57.0"
    }
  },


  "background": {
    "scripts": [
      "src/require.js",
      "src/run.js",

      "src/bgnd/a-script-that-needs-loading.js"
    ]
  },

  "permissions": [
    "tabs"
  ]
}
